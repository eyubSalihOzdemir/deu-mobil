<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        style="@style/Widget.Material3.CardView.Elevated"
        app:cardBackgroundColor="@color/md_theme_light_secondaryContainer"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/parent_grade_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Title goes here"
                android:textSize="19sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/md_theme_light_onPrimaryContainer"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:dividerInsetStart="@dimen/activity_horizontal_margin"
                app:dividerInsetEnd="@dimen/activity_horizontal_margin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sınav Adı"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:width="60dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginLeft="5dp"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İlan Tarihi"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:width="60dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sınıf Ort."
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:width="60dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ort 2"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:width="60dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notunuz"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:width="60dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
